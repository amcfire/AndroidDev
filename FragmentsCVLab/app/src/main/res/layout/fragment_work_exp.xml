<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workExpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="80dp"

            android:layout_marginTop="10sp"
            android:layout_gravity="right"
            android:src="@drawable/photo" />

        <TextView
            android:id="@+id/ttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:gravity="left"
            android:text="Work Experience"
            android:textSize="24sp"
            android:textColor="@color/colorBl"/>


        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorBl"
            android:text="CONTACT INGENIEROS LTDA, Bogota, Colombia • 2011-present
Technology company specializing in real time information system for value chain management.
First-Level Support of Energy Purchasing System
Initiated first-level technical support for SIR system functioning as regulatory information system." />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/colorBl"
            android:text="EBC INGENIERIA S.A., Bogota, Colombia • 2008-2011
Leading provider of IT and automation solutions.
IT Department Manager / Project Engineer
Managed various Geographic Information System projects." />

        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/colorBl"
            android:text="Algorithmic Trading Developer • 2012-present
Develop robots for forex and cryptocurrencies markets." />

     </LinearLayout>

</FrameLayout>