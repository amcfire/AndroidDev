<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MultiMSG Sender"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="5sp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/textIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Type your message:"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="5sp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hello" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow>
            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/gmail"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:layout_column="0"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="5sp"
                android:autoLink="all"
                android:clickable="true"
                android:onClick="GmailClic"

                />
            <ImageView
                android:id="@+id/imageView02"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/whatsapp"
                android:layout_gravity="center_horizontal"
                android:layout_column="1"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="10sp"
                android:autoLink="all"
                android:clickable="true"
                android:onClick="WhatsappClic"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail"
                android:layout_gravity="center_horizontal"
                android:layout_column="0"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="5sp"
                android:textSize="18sp"
                android:autoLink="all"
                android:clickable="true"
                android:onClick="GmailClic"
                />
            <TextView
                android:id="@+id/textView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whatsapp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:layout_column="1"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="10sp"
                android:textSize="18sp"
                android:autoLink="all"
                android:clickable="true"
                android:onClick="WhatsappClic"
                />
        </TableRow>
        <TableRow>
            <ImageView
                android:id="@+id/imageView03"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/hangout"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:layout_column="0"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="5sp"
                android:autoLink="all"
                android:clickable="true"
                android:onClick="HangoutClic"
                />
            <ImageView
                android:id="@+id/imageView04"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/txt"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:layout_column="1"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="10sp"
                android:autoLink="all"
                android:clickable="true"
                android:onClick="MsgClic"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HangOut"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:layout_column="0"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="5sp"
                android:textSize="18sp"
                android:autoLink="all"
                android:clickable="true"
                android:onClick="HangoutClic"
                />
            <TextView
                android:id="@+id/textView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Message"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10sp"
                android:layout_column="1"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="10sp"
                android:textSize="18sp"
                android:autoLink="all"
                android:clickable="true"
                android:onClick="MsgClic"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>